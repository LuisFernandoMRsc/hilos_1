<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/inicio_salar"
    android:layout_height="match_parent"
    tools:context=".RecuperarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="Recuperar contraseña"
            android:textAlignment="center"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ven y unete a nuestra comunidad"
            android:textAlignment="center" />

    </LinearLayout>

    <ImageView
        android:layout_width="243dp"
        android:layout_height="212dp"
        android:src="@drawable/postal_salar"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="175dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="432dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/item_button"
            android:ems="10"
            android:layout_marginHorizontal="80dp"
            android:inputType="text"
            android:hint="Nombre" />
        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="80dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/item_button"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Contraseña" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="423dp"
        android:layout_height="125dp"
        android:orientation="vertical"
        android:gravity="bottom"
        tools:layout_editor_absoluteX="-8dp"
        tools:layout_editor_absoluteY="572dp"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continuar" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>